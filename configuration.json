        },
        "tap_backlog_limit": {
            "default": "5000",
            "type": "size_t"
        },
        "tap_backoff_period": {
            "default": "5.0",
            "type": "float"
        },
        "tap_bg_max_pending": {
            "default": "500",
            "type": "size_t"
        },
        "tap_keepalive": {
            "default": "0",
            "type": "size_t"
        },
        "tap_noop_interval": {
            "default": "200",
            "descr": "Number of seconds between a noop is sent on an idle connection",
